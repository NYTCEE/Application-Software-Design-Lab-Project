<resources>
    <!-- 定义 GameButton 样式 -->
    <style name="GameButton">
        <item name="android:layout_width">100dp</item> <!-- 按钮宽度 -->
        <item name="android:layout_height">100dp</item> <!-- 按钮高度 -->
        <item name="android:textSize">24sp</item> <!-- 按钮文本大小 -->
        <item name="android:textColor">#000000</item> <!-- 按钮文本颜色 -->
        <item name="android:backgroundTint">#D3D3D3</item> <!-- 设置按钮背景颜色为浅灰色 -->
        <item name="android:layout_margin">8dp</item> <!-- 按钮之间的间距 -->
        <item name="android:textAllCaps">false</item> <!-- 不让文字大写 -->
    </style>
</resources>
