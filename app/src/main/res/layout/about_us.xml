<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:text="About Us"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 按鈕容器 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintBottom_toTopOf="@id/copyrightText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 官方網站連結 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/websiteLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#80FFFFFF"
            android:padding="16dp"
            android:text="LINK：https://linktr.ee/nytcee"
            android:textColor="#000000"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            android:elevation="4dp" />

        <!-- Email連結 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/emailLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#80FFFFFF"
            android:padding="16dp"
            android:text="MAIL：nytcee@gmail.com"
            android:textColor="#000000"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            android:elevation="4dp" />

        <!-- YouTube連結 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/ytLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#80FFFFFF"
            android:padding="16dp"
            android:text="YOUTUBE：Nytcee"
            android:textColor="#000000"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            android:elevation="4dp" />

        <!-- Instagram連結 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/instagramLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#80FFFFFF"
            android:padding="16dp"
            android:text="INSTAGRAM：@eenytc"
            android:textColor="#000000"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            android:elevation="4dp" />
    </LinearLayout>

    <!-- 版權聲明 -->
    <TextView
        android:id="@+id/copyrightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Copyright © 2024 NYTCEE All Rights Reserved."
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
